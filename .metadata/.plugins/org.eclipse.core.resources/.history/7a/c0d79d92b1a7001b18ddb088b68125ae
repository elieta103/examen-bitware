	}

	public boolean esMayorDeEdad() {
		boolean mayorEdad;
		mayorEdad = (getEdad()>=18) ? true: false;
		return mayorEdad;
	}
	
	public boolean comprobarSexo(char sexo) {	
			if(sexo == 'H' || sexo == 'F') {
				return true;
			}
		return false;
	}
}
